while True:
    try:
        menu = int(input("Décimal vers Binaire: 0, Binaire vers Décimal: 1 --> : "))
        if menu != 0 and menu != 1:
            print("Il faut choisir entre 0 et 1")
        else:
            break
    except ValueError:
        print("Vous avez entré une/des lettre/s, il faut choisir entre 0, ou 1")

#Ligne 1 : On ouvre une boucle infini pour pouvoir faire la vérification de l'input autant de fois que nécessaire
#Ligne 2 : (+ 8) : Permet de gérer les erreurs et les exceptions
#Ligne 3 : On demande à l'utilisateur la module de calcul qu'il veut utiliser
#Ligne 4 + 5 + 6 : Verifie si la variable est différente de 0 ou 1
#   Si oui alors on affiche un message et on recommence la boucle ( grâce à try
#  Si non (else), alors les valeurs entrés correspondent à celle attendu et donc on coupe la boucle try et while True et on peut enfin entrer dans la suite du programme
#Ligne 8 : Except ValueError, permet de redemander à l'utilisateur une valeur si celle entrée précédemment est d'un type différent au type de la valeur demandé, dans notre cas un int

# Menu
# -----------------------------------------------------------------------
def decitobinaire():
    while True:
        try:
            deci = int(input("Entrez la valeur décimale que vous voudrez convertir en langage binaire: "))
            break
        except ValueError:
            print("Vous avez entré une/des lettre/s, il faut choisir un nombre")
    resultat = " "

    while deci != 0:
        quotient = deci // 2
        reste = deci % 2
        resultat += str(reste)
        deci = quotient
    res = " "
    for i in range(len(resultat) - 1, -1, -1):
        res += resultat[i]
    print("Votre valeur en binaire est égale à", res, ".")

#Ligne 22 : On creer une fonction nommé decitobinaire(), on va pouvoir appeler le bout de code en dessous quand on voudra dans la suite du programme
#Ligne 23 à 28 : Même principe de la vérification de la valeur entré, que précedamment
#Ligne 28 : On creer une variable resultat
#Ligne 30 à 34 tant que la valeur entrée est différente de 0 alors:
#dans une variable quotient

# Fonction Decimal vers Binaire
# ---------------------------------
ef binairetodeci():
    while True:
        try:
            lstbinaire = list(input())
            w = 0


            for loop in range(len(lstbinaire)):
                pos = int(lstbinaire[w])
                if pos == 0 or pos == 1:
                  print()
                else:
                    print("Ce bit n'est pas correct {} .".format(pos))
                w += 1
        except ValueError:
            print("Vous avez entré une/des lettre/s, il faut choisir entre 0, ou 1")
    print("On est bino")

    lstbinaire.reverse()

    lstmultiplicateur = []
    multi = len(lstbinaire)
    n = 0
    for loop in range(multi):
        lstmultiplicateur.append(2 ** n)
        n += 1

    lstfinal = []
    t = 0
    for loop in range(multi):
        valBin = lstbinaire[t]
        if valBin == 0:
            lstfinal.append(0)
        if valBin == 1:
            lstfinal.append(lstmultiplicateur[t])
        t += 1

    resultat = 0
    o = 0
    for loop in range(len(lstfinal)):
        resultat = resultat + lstfinal[o]
        o += 1

    print("Votre valeur décimale est égale à", resultat, ".")


# Fonction Binaire vers Décimal
# -----------------------------------------------------------------------
if menu == 0:
    decitobinaire()

if menu == 1:
    binairetodeci()

stop = input("Pour quitter le programme, appuyez sur une touche, et validez : ")

